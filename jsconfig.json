{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "esnext",
    "strict": true,
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "resources/js/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "public/build",
    "vendor",
    "storage"
  ],
  "include": [
    "resources/js/**/*",
    "vite.config.js",
    "tailwind.config.js",
    "svelte.config.js"
  ]
}